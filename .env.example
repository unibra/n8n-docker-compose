# ==============================================
# CONFIGURAÇÕES PRINCIPAIS - N8N PRODUÇÃO
# ==============================================

# Domínio e Host
N8N_HOST=n8n.giacomo.dev.br

# ==============================================
# POSTGRESQL - BANCO DE DADOS
# ==============================================
POSTGRES_DB=n8n_production
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=1!@Fag.dev
N8N_DB_SCHEMA=public

# ==============================================
# REDIS - CACHE E SESSÕES
# ==============================================
REDIS_DB=0

# ==============================================
# N8N - CONFIGURAÇÕES PRINCIPAIS
# ==============================================

# Chave de criptografia (IMPORTANTE: Gere uma chave única e segura)
# Execute: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your-unique-32-char-hex-encryption-key-here

# JWT Secret para autenticação (IMPORTANTE: Gere um secret único)
# Execute: openssl rand -hex 64
N8N_JWT_SECRET=1!@Fag.dev

# Timeouts de execução (em segundos)
N8N_EXECUTIONS_TIMEOUT=3600
N8N_EXECUTIONS_TIMEOUT_MAX=7200

# ==============================================
# N8N - CONTEÚDO DA COMUNIDADE
# ==============================================
N8N_COMMUNITY_PACKAGES_ENABLED=true
N8N_TEMPLATES_ENABLED=true
N8N_TEMPLATES_HOST=https://api.n8n.io
N8N_PUBLIC_API_DISABLED=false

# ==============================================
# CLOUDFLARE TUNNEL
# ==============================================
# Token do túnel Cloudflare (obtenha no dashboard)
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token-here

# ==============================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ==============================================
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=seu-email@gmail.com
N8N_SMTP_PASS=1!@Fag.dev
N8N_SMTP_SENDER="N8N Automation <seu-email@gmail.com>"

# ==============================================
# CONFIGURAÇÕES DE AMBIENTE
# ==============================================
COMPOSE_PROJECT_NAME=n8n-production
COMPOSE_FILE=docker-compose.yml

# ==============================================
# BACKUP CONFIGURAÇÕES
# ==============================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=n8n-backups-bucket
BACKUP_S3_REGION=us-east-1

# ==============================================
# MONITORING (OPCIONAL)
# ==============================================
ENABLE_MONITORING=true